<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
    android:paddingLeft="@dimen/app_padding" android:paddingRight="@dimen/app_padding"
    android:paddingTop="12dp" android:paddingBottom="14dp" android:gravity="center"
    android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView
        android:maxLines="1"
        style="@style/BaseText"
        android:ellipsize="end"
        android:layout_weight="20"
        android:layout_width="0dp"
        android:id="@+id/transactSum"/>

    <TextView
        android:maxLines="1"
        style="@style/StdText"
        android:layout_weight="22"
        android:layout_width="0dp"
        android:id="@+id/transactWhen"/>

    <ImageView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:id="@+id/transactCircle"
        android:layout_height="wrap_content"/>

</LinearLayout>