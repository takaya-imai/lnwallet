<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:paddingLeft="@dimen/app_padding" android:paddingRight="@dimen/app_padding"
    android:paddingTop="12dp" android:paddingBottom="14dp" android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            style="@style/BaseText"
            android:layout_weight="19"
            android:layout_width="0dp"
            android:id="@+id/transactSum"/>

        <TextView
            android:maxLines="1"
            style="@style/StdText"
            android:layout_weight="19"
            android:layout_width="0dp"
            android:id="@+id/transactWhen"/>

        <ImageView
            android:id="@+id/transactCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        style="@style/BaseText"
        android:id="@+id/transactWhat"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_bg"/>

</LinearLayout>